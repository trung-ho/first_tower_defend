{
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.vs": true,
    "Library/": true,
    "library/": true,
    "Logs/": true,
    "logs/": true,
    "Temp/": true,
    "temp/": true,
    "obj/": true,
    "Obj/": true,
    "build/": true,
    "Build/": true,
    "UserSettings/": true
  },
  "files.associations": {
    "*.asset": "yaml",
    "*.meta": "yaml",
    "*.prefab": "yaml",
    "*.unity": "yaml"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.sln": "*.csproj",
    "*.slnx": "*.csproj"
  },
  "dotnet.defaultSolution": "first_tower_defend.slnx",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false
}
